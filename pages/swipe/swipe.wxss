/* pages/swipe/swipe.wxss */

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 450rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
}

.swiper-container .dots {
  position: absolute;
  right: 50rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  width: 40rpx;
  background: #f80;
}
