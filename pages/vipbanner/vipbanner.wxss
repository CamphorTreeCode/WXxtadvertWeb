/* pages/vipbanner/vipbanner.wxss */

/* vip banner strat */

image {
  border: 0;
  margin: 0;
  padding: 0;
}

/* head strat */

.head {
  width: 100%;
  height: 100%;
  background: #000;
}

.head_img {
  display: block;
  width: 100%;
  height: 800rpx;
  background: #000;
}

/* main start */

.main {
  width: 100%;
  height: 100%;
  padding: 100rpx;
  box-sizing: border-box;
  background: #000;
  position: relative;
}

.main_img {
  display: block;
  width: 100%;
  height: 1200rpx;
  border: 0;
}

.main_activity {
  color: rgb(182, 158, 99);
  font-weight: 800;
  font-size: 50rpx;
  position: absolute;
  top: 150rpx;
  left: 50%;
  transform: translateX(-50%);
}

.main_discounts {
  white-space: nowrap;
  color: rgb(182, 158, 99);
  position: absolute;
  top: 245rpx;
  left: 50%;
  transform: translateX(-50%);
}

.main_vip {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.main_discount {
  font-weight: 600;
  font-size: 50rpx;
  white-space: nowrap;
  color: rgb(255, 209, 116);
  position: absolute;
  bottom: 400rpx;
  left: 50%;
  transform: translateX(-50%);
}

.main_but {
  width: 400rpx;
  height: 100rpx;
  position: absolute;
  bottom: 250rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* vip banner end */
