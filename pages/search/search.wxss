/* pages/search/search.wxss */

/* 搜索框 */

.header {
  width: 100%;
  height: 100%;
  display: flex;
}

.search {
  width: 80%;
  position: relative;
}

.search_input {
  background: #f5f5f5;
  border-radius: 40rpx;
  margin: 0 0 0 20rpx;
  padding: 20rpx;
  z-index: 1;
}

.ss {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  z-index: 2;
}

.sou {
  width: 20%;
  color: #fff;
  background: rgb(253, 211, 0);
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
  border-radius: 50rpx;
}

/* 历史搜索 */

