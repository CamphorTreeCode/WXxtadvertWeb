/* 选购列表 listbox start */

select {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.listbox {
  width: 100%;
  height: 100%;
  margin: 100rpx 0;
}

/* listbox_box */

.listbox_box {
  width: 100%;
  display: flex;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
}

/* listbox_box_left */

.listbox_box_left {
  /* flex: 1; */
  width: 30%;
  margin: 10rpx 0;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}

.listbox_box_img {
  width: 100%;
  height: 100%;
}

.listbox_box_lable {
  color: #fff;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  bottom: 0;
  left: 0;
}

/* listbox_box_center */

.listbox_box_center {
  /* flex: 2; */
  width: 40%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.listbox_box_title {
  width: 100%;
  font-size: 40rpx;
  font-weight: unset;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.listbox_box_flow {
  margin: 15rpx 0;
}

.listbox_box_flow text {
  padding: 0 10rpx;
  border-radius: 10rpx;
  background: #d5ebff;
  color: rgb(44, 143, 236);
  border: 1px solid rgb(44, 143, 236);
}

.listbox_box_distance {
  color: #999;
}

.listbox_box_unit {
  color: #f80;
  font-size: 40rpx;
  font-weight: 400;
}

/* listbox_box_right */

.listbox_box_right {
  /* flex: 1; */
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 屏数 */

.listbox_box_surplus {
  color: #999;
  text-align: right;
}

/* 计算 */

.listbox_box_computer {
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: center;
}

/* 加 */

.listbox_box_plus {
  width: 50rpx;
  height: 50rpx;
}

/* 数量 */

.listbox_box_quantity {
  height: 50rpx;
  line-height: 50rpx;
  color: rgb(253, 211, 0);
  margin: 0 20rpx;
}

/* 减 */

.listbox_box_subtract {
  width: 50rpx;
  height: 50rpx;
}

/* 地址 */

.listbox_box_site {
  width: 90%;
  color: #999;
  background: url(https://www.chuanshoucs.com/ServerImg/2018-08-03/3faac444-23d2-4aaf-910c-9181ce4bdc4c.png)no-repeat;
  background-size: 40rpx 40rpx;
  padding-left: 40rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
}

/* listbox end */
