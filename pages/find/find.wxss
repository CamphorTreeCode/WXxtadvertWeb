/* pages/find/find.wxss */

/* find */

.find {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  padding-bottom: 200rpx;
}

.find_content {
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 20rpx;
}

.find_top {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.find_top .find_top_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.find_top .find_title {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx 0;
  margin: 0 20rpx;
}

.find_top .find_title .find_title_cn {
  color: #333;
}

.find_top .find_title .find_title_en {
  font-size: 30rpx;
  color: #999;
}

.find .find_time {
  flex: 1;
  line-height: 100rpx;
  font-size: 30rpx;
  color: rgb(253, 211, 0);
  text-align: right;
}

.find_main {
  width: 100%;
  margin-top: 20rpx;
}

.find_main .find_main_title {
  text-indent: 40rpx;
  line-height: 80rpx;
  font-weight: unset;
  font-size: 40rpx;
}

.find_main .find_main_text {
  color: #666;
  text-indent: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.find_main .find_main_examine {
  color: rgb(253, 211, 0);
  padding: 5rpx;
}

.video {
  margin: 20rpx 0;
}

.find_main video {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}

.video_img {
  width: 30%;
  height: 200rpx;
  margin: 0 1.5%;
  border-radius: 10rpx;
}

.find_praise {
  width: 100%;
  font-size: 30rpx;
  color: #999;
  text-align: right;
  margin: 20rpx 0;
}

.find_praise .find_read {
  padding: 0 35rpx;
  background: url(https://www.chuanshoucs.com/ServerImg/2018-08-03/23e4a83a-1da7-4282-80b2-b6c5681ade9e.png)no-repeat;
  background-size: 30rpx 30rpx;
  background-position-x: 0;
  background-position-y: 50%;
}

.find_praise .find_like {
  padding: 0 35rpx;
  background: url(https://www.chuanshoucs.com/ServerImg/2018-08-03/2415e140-2cb2-48d8-8675-ff2795b955ef.png)no-repeat;
  background-size: 30rpx 30rpx;
  background-position-x: 0;
  background-position-y: 50%;
}

/* tabbar */

.foter {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
}
.spinner{
   background:transparent;
 }
.bottomText{
   background: transparent;
 }