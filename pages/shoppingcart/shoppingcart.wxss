/* 初始样式 */

page {
  background: #f5f5f5;
  padding-bottom: 100rpx;
}

.main {
  background: white;
  margin-bottom: 100rpx;
}

.container {
  border-bottom: 30rpx solid #f5f5f5;
}

/* 底部导航 */

.foter {
  z-index: 99;
}

/* 清空 */

.clear {
  height: 75rpx;
  background: #f1f1f1;
  position: relative;
  line-height: 75rpx;
}

.clear image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  right: 120rpx;
}

.clear text {
  position: absolute;
  right: 35rpx;
  font-size: 36rpx;
  color: #ccc;
}

/* 购物车 */

.touch-item {
  font-size: 14px;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  padding: 20rpx 25rpx;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  margin-left: -200rpx;
  display: flex;
}

/* 三块布局 */

.c_left {
  width: 30%;
  display: inline-block;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 1%;
  position: relative;
}

.c_left image {
  width: 100%;
  height: 100%;
}

.c_left .label_bottom {
  color: #fff;
  font-size: 26rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  left: 0;
  bottom: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.c_center {
  width: 49%;
  display: inline-block;
  overflow: hidden;
  padding-left: 1%;
}

.c_right {
  width: 25%;
  display: inline-block;
  height: 100%;
}

/* 购物车标签 */

/* 右侧 */

.title {
  font-size: 32rpx;
}

.label {
  margin: 5rpx 0;
}

.label text {
  background: #d5ebff;
  color: #4daafe;
  border-radius: 10rpx;
  padding: 0rpx 5rpx;
  font-size: 28rpx;
  border: 1rpx solid #4daafe;
  margin-right:5rpx;
}

.dizhi {
  color: #9b9b9b;
}

.jiagep {
  color: red;
  font-weight: bold;
  font-size: 34rpx;
}

/* 选择结算 */

.choice {
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
  overflow: hidden;
}

.choice image {
  width: 40rpx;
  height: 40rpx;
  margin: auto 0;
  display: inline-block;
}

/* 左侧 */

.surplus {
  color: #9b9b9b;
  text-align: right;
  padding-right: 30rpx;
}

.tupian {
  display: flex;
  margin-top: 30rpx;
}

.tupian image {
  width: 50rpx;
  height: 50rpx;
}

.tupian text {
  display: inline-block;
  line-height: 50rpx;
  padding: 0 18rpx;
  color: #ffd800;
}

/* 选择价格 */

.price {
  padding: 20rpx;
  font-size: 34rpx;
  border-bottom: 1px solid #f5f5f5;
}

.price .p_right {
  float: right;
  color: #ffd800;
  position: relative;
  padding-right: 50rpx;
}

.price .p_right image {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  right: 0;
  margin-top: -20rpx;
}

/* 价格 */

.jiage {
  border-bottom: 1rpx solid #f9f9f9;
  padding: 20rpx 0rpx 20rpx 22rpx;
}

.jiage text {
  padding: 5rpx 10rpx;
  color: #ffd800;
  display: inline-block;
  margin: 10rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ffd800;
  font-weight: 400;
  font-size: 34rpx;
}

.juse {
  background: #ffd800;
  color: white !important;
}

/* 去结算 */

.jiesuan {
  height: 80rpx;
  color: white;
  /* border-bottom: 24rpx solid #f5f5f5; */
  position: fixed;
  bottom: 95rpx;
  left: 0;
  width: 100%;
}

.jiesuan .j_a {
  width: 220rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.jiesuan .j_b {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  z-index: 11;
  right: 20rpx;
}

.jiesuan text {
  position: absolute;
  top: 0;
  right: 60rpx;
  z-index: 10;
  line-height: 80rpx;
}

/* 删除按钮 */

.del {
  background-color: orangered;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 34rpx;
}

/* 滑动动效 */

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

/* 账户不符合 */

.Nonconformity image {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  top: 45%;
  left: 50%;
  margin-top: -200rpx;
  margin-left: -75rpx;
}

.Nonconformity text {
  position: fixed;
  top: 62%;
  left: 75rpx;
  margin-top: -200rpx;
  font-size: 32rpx;
  color: #ccc;
}

/* 游客未登录 */

.tourist view {
  background: #ffd800;
  position: fixed;
  padding: 15rpx 70rpx 15rpx 30rpx;
  color: white;
  border-radius: 30rpx;
  top: 45%;
  left: 40%;
  font-size: 32rpx;
}

.tourist image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 55%;
  margin-top: -20rpx;
  right: 20rpx;
}

.tourist text {
  position: fixed;
  top: 53%;
  left: 305rpx;
  margin-top: -200rpx;
  font-size: 32rpx;
  color: #ccc;
}

/* 购物车为空 */

.correct image {
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  top: 45%;
  left: 50%;
  margin-top: -200rpx;
  margin-left: -100rpx;
}

.correct text {
  position: fixed;
  top: 65%;
  left: 145rpx;
  margin-top: -200rpx;
  font-size: 32rpx;
  color: #ccc;
}
