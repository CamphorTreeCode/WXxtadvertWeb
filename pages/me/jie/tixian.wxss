/* pages/me/jie/tixian.wxss */
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding-top: 20rpx;
  background-color: #F2F2F2;
  position: relative;
}
.zong {
  background-color: #fff;
  border-radius: 15rpx;
  margin: 0rpx 40rpx;
  padding: 20rpx 40rpx;
}
.one {
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;
}
.one image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}
.two {
  padding:20rpx 0 40rpx 0;
  color: #999;
  text-align: right;
  border-bottom: 1rpx solid #C2C2C2;
}
.three {
  border-bottom: 1rpx solid #C2C2C2;
  font-size: 2rem;
  font-weight: 700;
  padding-bottom: 30rpx;
}
input {
  width: 80%;
  height: 100%;
  float: right;
}
button {
  margin: 100rpx 0 40rpx 0;
  background-color: #FFD801;
  color: #fff;
}
/* 弹框 */
.shadow {
  width: 100%;
  height: 100%;
  background-color: #797979;
  position: absolute;
  top: 0;
  left: 0;
}
.tan {
  border: 1rpx solid #fff;
  background-color: #fff;
  border-radius: 15rpx;
}
.tan input {
  width: 70%;
  margin: 0 12%;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #F5F5F5;
  margin-bottom: 60rpx;
  text-align: left;
  padding-left: 6%;
  color: #ccc;
}
.tan button {
  width: 76%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 12%;
  margin-bottom: 60rpx !important;
  border-radius: 50rpx;
}
.kan {
  position: absolute;
  width: 80%;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 999999999;
  text-align: center;
}
