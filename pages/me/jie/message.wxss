/* pages/me/fa/message.wxss */
page {
  background-color: #F2F2F2;
}
.hang {
  font-size: 33rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 5rpx solid #F5F5F5;
  position: relative;
  background-color: #fff;
}
.aaa {
  border-bottom: none;
  
}
.hang image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin: 0 20rpx;
}
.hang input {
  margin-right: 20rpx;
  width: 60%;
  height: 70rpx;
  float: right;
}
.hang .leixing {
  max-width: 52%;
  margin-right: 80rpx;
}
.qian {
  border-bottom: 5rpx solid #f5f5f5;
  background-color: #fff;
  padding: 40rpx 20rpx;
  padding-bottom: 20rpx;
}
.qian text {
  display: inline-block;
  border: 2rpx solid #ccc;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  color: #ccc;
  padding: 8rpx 15rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
}
.active {
  color: #FEC600 !important;
  border: 2rpx solid #FFD800 !important;
}
.hang .dizhi {
  max-width: 52%;
  margin-right: 80rpx;
  /* font-size: 30rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;   
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.hang .zhankai {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}
.bbb {
  background-color: #fff;
  box-sizing: border-box;
  width: 100%;
  line-height: 1.2rem;
  height: 120rpx;
  padding-left: 70rpx;
  overflow: hidden;
  border-bottom: 5rpx solid #F5F5F5;
}
.jianjie {
  height: 230rpx;
}
.sc {
  border-bottom: 5rpx solid #F5F5F5;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bg {
  margin: 20rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  background-color: #F2F2F2;
  text-align: center;
}
/* 默认 */
.bg .logo {
  width: 60rpx;
  height: 60rpx;
  margin: 45rpx 0;
}
.bg .logo-y {
  display: none;
}
/* 上传后 */
.bg .logo-x {
  display: block;
  width: 150rpx;
  height: 150rpx;
}
.wenzi {
  margin-right: 20rpx;
  width: 540rpx;
  text-align: left;
  float: right;
  color: #CDCDCD;
  font-size: 30rpx;
}
.lunbo {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;

}
.lunbo .bg {
  width: 120rpx;
  height: 120rpx;
  margin: 0;
  position: relative;
}
.num {
  color: #fff;
  position: absolute;
  top: 0;
  right: 5rpx;
  font-size: 28rpx;
  z-index: 999;

}
.dai {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  z-index: 888;
}
.lunbo .logo {
  width: 50rpx;
  height: 50rpx;
  margin: 35rpx 0;
}
.lunbo .logo-x {
  display: block;
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  left: 0;
}
button {
  margin: 30rpx 20rpx;
  color: #fff;
  background-color: #ccc;
  line-height: 2;
}