page {
  background: url(https://www.chuanshoucs.com/ServerImg/2018-07-24/b61221a2-23ae-4049-9ee6-b9d614967e79.png) no-repeat center center;
  background-size: 485rpx 718rpx;
  position: relative;
}
image{
  width: 180rpx;
  height: 180rpx;
  text-align: center;
}
.hang {
  border-bottom: 1rpx solid #E2E2E2;
  margin: 20rpx 40rpx;
  padding: 20rpx 0;
}
.hang image {
  width: 46rpx;
  height: 46rpx;
}
.hang input {
  float: right;
  width: 88%;
  border: 1rpx solid bule;
}
.wu {
  color: #FED700;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
}
.btn1 {
  color: #fff;
  background-color: #FFD801;
  margin: 0 40rpx;
  border-radius: 50rpx;
}
.btn2 {
  color: #FFD801;
  background-color: #fff;
  margin: 40rpx 40rpx 0 40rpx;
  border-radius: 50rpx;
  border: 1rpx solid #FFD801;
}
/* 登录身份判断 */
.shadow {
  display: none;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #7F7F7F;
}
.tan {
  width:80%;
  display: none;
  background-color: #fff;
  border-radius: 30rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-30%);
  text-align: center;
  font-size: 33rpx;
  z-index: 999;
}
.kuang {
  display: block;
}
.tan image {
  margin: 70rpx 0;
}
.tan button {
  width: 40%;
  color: #fff;
  background-color: #FFD801;
  border-radius: 50rpx;
  margin: 70rpx auto;
}
