/* pages/me/fa/yizhifu.wxss */
page {
  background-color: #F2F2F2;
}
.zong {
  background-color: #fff;
}
.shang {
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 35rpx;
  height: 200rpx;
  padding: 20rpx 20rpx;
  border: 2rpx solid #F2F2F2;
}
.zuo {
  width:58%;
}
.biao {
  color: #34A1FF; 
  background-color: #D5EBFF; 
  border: 1rpx solid #34A1FF; 
  border-radius: 10rpx;
  padding: 5rpx 8rpx;
  font-size: 25rpx;
  margin:5rpx;
}
.you {
  width: 42%;
  text-align: right;
}
.xia {
  padding: 20rpx;
  overflow: hidden;
  color: #999;
  font-size: 35rpx;
}
/* 弹框 */

.shadow {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: none;
  background-color: #797979;
  opacity: 0.7;
}
.tan {
  display: none;
  background-color: #fff;
  border-radius: 30rpx;
  text-align: center;
  width: 600rpx;
  height: 500rpx;
  position: absolute;
  top:50%;
  left: 50%;
  margin-top: -200rpx;
  margin-left: -300rpx;
}
.tan image {
  width: 124rpx;
  height: 124rpx;
  margin: 100rpx 0 30rpx 0;
}
.tan .anniu {
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #fff;
  justify-content: space-around;
}
.quxiao,
.queding{
  width: 50%;
  padding: 20rpx 0;
  background-color: #ccc;
}
.quxiao {
  border-bottom-left-radius: 30rpx;
}
.queding {
  background-color: #FFD800;
  border-bottom-right-radius: 30rpx;
}
.kuang {
  display: block;
}