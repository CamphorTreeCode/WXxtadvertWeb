/* pages/me/shoucang.wxss */
page {
  background-color: #F9F9F9;
  width: 100%;
  height: 100%;
}
.mei {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #9A9A9A;
}
.mei image{
  width: 244rpx;
  height: 244rpx;
  margin-bottom: 20rpx;
}


/* 有收藏 */
.zzz {
  position: relative;
  overflow: hidden;
}
.zong {
  background-color: #fff;
  padding: 20rpx 0;
  border-top: 5rpx solid #F9F9F9;
  overflow: hidden;
  position: relative;
  -webkit-transform: translateX(0rpx);
  transform: translateX(0rpx);
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}
.zong image {
  width: 220rpx;
  height: 200rpx;
  border-radius: 30rpx;
  float: left;
  margin-left: 15rpx;

}
.zhong {
  float: left;
  font-size: 30rpx;
  position: absolute;
  top: 50%;
  left: 55%;
  transform: translateX(-50%) translateY(-50%);
}
button {
  width: 150rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #FFD200;
  position: absolute;
  top: 50%;
  left: 87%;
  transform: translateX(-50%) translateY(-50%);
}
.yincang {
  background-color: #FF7372;
  color: #fff;
  font-size: 36rpx;
  width: 200rpx;
  height: 248rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}
.hua .zong {
  -webkit-transform: translateX(-200rpx);
 transform: translateX(-200rpx);
}
.hua .yincang {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}