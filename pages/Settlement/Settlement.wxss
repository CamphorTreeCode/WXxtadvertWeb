/* pages/Settlement/Settlement.wxss */
/* 初始化 */
page{background: #F5F5F5}
view{background: white}

/* 头部 */
.top{padding: 20rpx 30rpx;border-top: 5rpx solid #F5F5F5;border-bottom: 5rpx solid #F5F5F5;display: flex}
.top image{width: 200rpx;height: 200rpx;border-radius: 30rpx;display: inline-block}
.t_left {margin-left: 22rpx}
.title{font-size: 32rpx;}
.label {margin: 5rpx 0}
.label text{background: #D5EBFF;color: #4DAAFE;border-radius: 10rpx;padding: 0rpx 5rpx;font-size: 28rpx;border: 1rpx solid #4DAAFE}
.dizhi{color: #9B9B9B;font-size: 32rpx}
.jiagep{color: red;font-weight: bold;font-size: 34rpx}

/* 列表 */
.list{padding:30rpx;border-bottom: 5rpx solid #F5F5F5}
.list text{float: right;color: #FFD800}

.foter{padding: 20rpx;}
.foter text{color: #FF7A3D}
.foter image{width: 250rpx;height:95rpx;position: absolute;top: 0;right: 0}
.foter .zhifu{position: absolute;top: 22rpx;right: 88rpx;color: white}

/* 遮罩层 */
.mask{height: 2000rpx;width: 100%;background: black;opacity: 0.4;position: fixed;top: 0;left: 0;z-index: 10;}
/* .mesk{position: fixed;top: 30%;z-index: 11;} */
.mesk .image1{width: 150rpx;height: 150rpx;position: fixed;top: 30%;z-index: 11;left: 25%}
.mesk .image2{width: 150rpx;height: 150rpx;position: fixed;top: 30%;z-index: 11;right: 25%}
.mesk .image3{width: 80rpx;height: 80rpx;position: fixed;top: 60%;z-index: 11;left: 50%;margin-left: -40rpx}
.mesk text{color: white;font-size: 32rpx;position: fixed;top: 50%;z-index: 11;left: 37%} 

/* 支付页面 */ 
 .viw{width: 80%;z-index: 11;position: fixed;top: 15%;left: 10%;text-align: center;border-radius: 20rpx;padding: 30rpx 0;}
.viw text{display: block;margin: 30rpx 0;font-size: 32rpx}
.payment{color: white;width: 69%;border-radius: 40rpx;font-size: 32rpx;padding: 15rpx 30rpx; display: block;margin: 30rpx auto !important;background: #FFCC00;} 
.viw input{background: #F5F5F5;width: 70%;border-radius: 40rpx;padding: 10rpx 0 10rpx 50rpx ; display: block;margin: 30rpx auto;text-align: initial;color:black} 
 .price{color: #FFCC00} 
 .quxiao{position: absolute;bottom: -115rpx;left: 43%;color: white ;z-index: 11}
