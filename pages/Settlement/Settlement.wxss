/* pages/Settlement/Settlement.wxss */

/* 初始化 */

page {
  background: #f5f5f5;
}

view {
  background: white;
}

/* 头部 */

.top {
  padding: 20rpx 30rpx;
  border-top: 5rpx solid #f5f5f5;
  border-bottom: 5rpx solid #f5f5f5;
  display: flex;
}

.top image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.t_left {
  margin-left: 22rpx;
}

.title {
  font-size: 32rpx;
}

.label {
  margin: 5rpx 0;
}

.label text {
  background: #d5ebff;
  color: #4daafe;
  border-radius: 10rpx;
  padding: 0rpx 5rpx;
  font-size: 28rpx;
  border: 1rpx solid #4daafe;
  margin-right:5rpx;
}

.dizhi {
  color: #9b9b9b;
  font-size: 32rpx;
}

.jiagep {
  color: red;
  font-weight: bold;
  font-size: 34rpx;
}

/* 列表 */

.list {
  padding: 30rpx;
  border-bottom: 5rpx solid #f5f5f5;
}

.list text {
  float: right;
  color: #ffd800;
}

.footer {
  padding: 20rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  /* z-index: 999; */
}

.footer text {
  color: #ff7a3d;
}

.footer image {
  width: 250rpx;
  height: 95rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.footer .zhifu {
  position: absolute;
  top: 22rpx;
  right: 88rpx;
  color: white;
}

/* 遮罩层 */

.mask {
  height: 2000rpx;
  width: 100%;
  background: black;
  opacity: 0.4;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

/* .mesk{position: fixed;top: 30%;z-index: 11;} */

.mesk .image1 {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  top: 30%;
  z-index: 11;
  left: 15%;
}

.mesk .image2 {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  top: 30%;
  z-index: 11;
  left: 50%;
  transform: translateX(-50%);
}

.mesk .image4 {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  top: 30%;
  z-index: 11;
  right: 15%;
}

.mesk .image3 {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  top: 60%;
  z-index: 11;
  left: 50%;
  margin-left: -40rpx;
}

.mesk text {
  color: white;
  font-size: 32rpx;
  position: fixed;
  top: 50%;
  z-index: 11;
  left: 37%;
}

/* 支付页面 */

.viw {
  width: 80%;
  z-index: 11;
  position: fixed;
  top: 15%;
  left: 10%;
  text-align: center;
  border-radius: 20rpx;
  padding: 30rpx 0;
}

.viw text {
  display: block;
  margin: 30rpx 0;
  font-size: 32rpx;
}

.payment {
  color: white;
  width: 69%;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 15rpx 30rpx;
  display: block;
  margin: 30rpx auto !important;
  background: #fc0;
}

.viw input {
  background: #f5f5f5;
  width: 70%;
  border-radius: 40rpx;
  padding: 10rpx 0 10rpx 50rpx;
  display: block;
  margin: 30rpx auto;
  text-align: initial;
  color: black;
}

.price {
  color: #fc0;
}

.quxiao {
  position: absolute;
  bottom: -115rpx;
  left: 43%;
  color: white;
  z-index: 11;
}
