page {
  font-size: 30rpx;
  /* background: #ccc; */
}

.select {
  width: 100%;
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  justify-content: space-around;
  /* z-index: 99999 */
}

.select .option {
  width: 20%;
  height: 60rpx;
  color: #999;
  line-height: 60rpx;
  /* border: 1rpx solid #ccc; */
  text-align: center;
  background: #f5f5f5;
  position: relative;
}

.select .option view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.gg {
  width: 30rpx;
  height: 15rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.toggle {
  overflow: hidden;
  position: relative;
  background: #fff;
  border-left: 30rpx;
}

.list {
  padding: 40rpx 20rpx 20rpx 20rpx;
}

.list text {
  color: #ccc;
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  margin: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.button {
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
}

.button view {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

.refresh {
  background: #f5f5f5;
}

.enter {
  color: #fff;
  background: rgb(253, 211, 0);
}

.screen {
  width: 100%;
  padding: 40rpx 20rpx;
  margin-top: 50rpx;
}

.screen input {
  display: inline-block;
  width: 20%;
  color: #ccc;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.screen image {
  width: 30rpx;
  height: 4rpx;
  margin: 0 10rpx;
  vertical-align: text-top;
}

.box {
  display: flex;
  height: 100%;
}

.swiper-tab {
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  background: #f5f5f5;
}

.swiper-box {
  flex: 2;
  width: 100%;
  height: 100%;
  background: #fff;
  text-align: center;
}

.on {
  color: #fff;
  background: rgb(253, 211, 0);
  border-radius: 50rpx;
}

.swiper-tab-list {
  margin: 40rpx;
}

.district {
  height: 700rpx;
  padding: 20rpx 0;
}

.district view {
  padding: 20rpx;
}

.selected {
  color: rgb(253, 211, 0);
}

.border {
  border: 1rpx solid rgb(253, 211, 0) !important;
  color: rgb(253, 211, 0) !important;
}

/* <!-- --------------------------------------------------------------- --> */

.zhe {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.3;
  z-index: 2
}
